extends layout

block content
  h1= title
  - var results = results
  div(class="container-fluid")
    div(class="row m-1")
      each item in results  
        - let destination = `dispatch(\"/Apples/update?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.Apples_colour}(#{item.Apples_quantity}) is #{item.Apples_price}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
   
  script.
    function dispatch(path){
      window.location.href=path
    }